@model List<ClassificationViewModel>;

@{
    ViewData["Title"] = "Classifications Page";
}

@section Css{

}
@section Scripts{
    <script src="~/AdminSection/js/admin-datatables.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}


<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Admin">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Classification</li>
    </ol>


    <!-- Example DataTables Card-->
    <div class="card mb-3">

        <div class="row card-header" style="
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    align-items: baseline;
">
            <div>
                <i class="fa fa-table"></i> Classifications Table
            </div>
            <a href="~/Admin/Classification/Create" class="btn_1">
                <i class="fa fa-plus-square"></i> Add New Classification
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Operations</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var classification in Model)
                            {
                                <tr>
                                    <td>@classification.Id</td>
                                    <td><a href="~/Admin/Classification/Details/@classification.Id"><strong>@classification.Name</strong></a></td>
                                    <td>
                                        <a href="~/Admin/Classification/Delete/@classification.Id" onclick="return confirm('Are you sure you want to delete @classification.Id ?');"><strong>Delete</strong></a> |
                                        <a href="~/Admin/Classification/Edit/@classification.Id" ><strong>Edit</strong></a>
                                    </td>
                                </tr>
                            }
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /tables-->
</div>