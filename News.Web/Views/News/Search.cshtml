@model List<NewsViewModel>;
@{
    ViewData["Title"] = "Search Page";
}

<!-- search -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <!-- Search result -->
                <div class="wrap__search-result">
                    <div class="wrap__search-result-keyword">
                        <h5>
                            Search results for keyword: <span class="text-primary"> "@ViewBag.Keyword" </span> found in
                            6 posts.
                        </h5>
                    </div>
                    @if (Model.Any())
                    {
                        foreach (var news in Model)
                        {
                            <!-- Post Article List -->
                            <div class="card__post card__post-list card__post__transition mt-30">
                                <div class="row ">
                                    <div class="col-md-5">
                                        <div class="card__post__transition">
                                            <a href="~/News/Details/@news.Id">
                                                <img src="@news.ImagePath" class="img-fluid w-100" alt="">
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-md-7 my-auto pl-0">
                                        <div class="card__post__body ">
                                            <div class="card__post__content  ">
                                                <div class="card__post__category ">
                                                    @news.Classification.Name
                                                </div>
                                                <div class="card__post__author-info mb-2">
                                                    <ul class="list-inline">
                                         
                                                        <li class="list-inline-item">
                                                            <span class="text-dark text-capitalize">
                                                                @news.CreatedAt
                                                            </span>
                                                        </li>

                                                    </ul>
                                                </div>
                                                <div class="card__post__title">
                                                    <h5>
                                                        <a href="~/News/Details/@news.Id">
                                                           @news.Name
                                                        </a>
                                                    </h5>
                                                    <p class="d-none d-lg-block d-xl-block mb-0">
                                                    @news.Description
                                                    </p>

                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>


                        }

                    }
                    else
                    {
                        <h5>
                            Not Found any news

                        </h5>
                    }
             
                </div>

